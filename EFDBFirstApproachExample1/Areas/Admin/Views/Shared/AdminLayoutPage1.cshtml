<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <title>@ViewBag.Title</title>

    <style>
        .field-validation-error, .validation-summary-errors {
            color: red;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-sm bg-info navbar-dark">
        <a class="navbar-brand" href="#">ADMIN</a>

        <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link" href="/admin/Home/index">Home</a></li>
            <li class="nav-item"><a class="nav-link" href="/admin/categories/index">Categories</a></li>
            <li class="nav-item"><a class="nav-link" href="/admin/brands/index">Brands</a></li>
            <li class="nav-item"><a class="nav-link" href="/admin/products/index">Products</a></li>
            <li class="nav-item"><a class="nav-link" href="/admin/users/index">Users</a></li>


            @if (User.Identity.IsAuthenticated == true)
            {
                <li class="nav-item"><a class="nav-link" href="/Account/logout">Logout</a></li>
            }

        </ul>

        @if (User.Identity.IsAuthenticated == true)
        {
            <div class="text-white">
                Welcome to, @User.Identity.Name
            </div>

        }


        @*<div class="col-3 text-white">
                @ViewBag.Message
            </div>*@
    </nav>

    <div class="container-fluid">

        @RenderBody()
    </div>
    <div>
    </div>
</body>
</html>